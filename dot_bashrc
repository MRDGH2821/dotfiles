#!/usr/bin/env bash

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

# Source global definitions
if [[ -f /etc/bashrc ]]; then
  # shellcheck source=/dev/null
  . /etc/bashrc
fi

# User specific environment
if ! [[ ${PATH} =~ ${HOME}/.local/bin:${HOME}/bin: ]]; then
  PATH="${HOME}/.local/bin:${HOME}/bin:${PATH}"
fi
export PATH

# Uncomment the following line if you don't like systemctl's auto-paging feature:
# export SYSTEMD_PAGER=

# Make less more friendly for non-text input files, see lesspipe(1)
# shellcheck disable=SC2312
[[ -x /usr/bin/lesspipe ]] && eval "$(SHELL=/bin/sh lesspipe)"

# User specific aliases and functions
if [[ -d ~/.bashrc.d ]]; then
  for rc in ~/.bashrc.d/*; do
    if [[ -f ${rc} ]]; then
      # shellcheck source=/dev/null
      . "${rc}"
    fi
  done
fi
unset rc

# Alias definitions.
# You may want to put all your additions into a separate file like
# ~/.bash_aliases, instead of adding them here directly.
# See /usr/share/doc/bash-doc/examples in the bash-doc package.

if [[ -f ~/.bash_aliases ]]; then
  # shellcheck source=/dev/null
  . ~/.bash_aliases
fi

# enable color support of ls and also add handy aliases
if [[ -x /usr/bin/dircolors ]]; then
  if test -r ~/.dircolors; then
    # shellcheck disable=SC2312
    eval "$(dircolors -b ~/.dircolors)"
  else
    # shellcheck disable=SC2312
    eval "$(dircolors -b)"
  fi
  alias ls='ls --color=auto'
  alias dir='dir --color=auto'
  alias vdir='vdir --color=auto'
  alias grep='grep --color=auto'
  alias fgrep='fgrep --color=auto'
  alias egrep='egrep --color=auto'
fi

# Miscellaneous Aliases
alias dnf="dnf5"
alias tb="nc termbin.com 9999"
alias cat='bat --paging=never'

# ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# Bash prompt from Endeavour OS
# PS1='[\u@\h \W]\$ '

# Bash prompt from KDE Neon
# Set fancy prompt (non-color, unless we know we "want" color)
# shellcheck disable=SC2249
case "${TERM}" in
xterm-color | *-256color) color_prompt=yes ;;
esac

# Fast Node Manager
FNM_PATH="${HOME}/.local/share/fnm"
if [[ -d ${FNM_PATH} ]]; then
  export PATH="${FNM_PATH}:${PATH}"
  # shellcheck disable=SC2312
  eval "$(fnm env)"
fi

# Oh my posh random theme initializer
# shellcheck disable=SC2312
mapfile -t themes < <(ls ~/.cache/oh-my-posh/themes/*.json)
# Set a random theme
# shellcheck disable=SC2312
eval "$(oh-my-posh init bash --config "${themes[RANDOM % ${#themes[@]}]}")"

# Zoxide
# shellcheck disable=SC2312
eval "$(zoxide init bash --cmd cd)"
# shellcheck disable=SC2312
eval "$(fzf --bash)"
