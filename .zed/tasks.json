[
  {
    "allow_concurrent_runs": false,
    "args": ["apply"],
    "command": "chezmoi",
    "hide": "on_success",
    "label": "Apply chezmoi"
  },
  {
    "args": ["execute-template", "-f", "$ZED_FILE"],
    "command": "chezmoi",
    "hide": "never",
    "label": "Execute Chezmoi template"
  },
  {
    "args": ["@fmma-npm/sort-markdown-tables", "-i", "$ZED_FILE"],
    "command": "bunx",
    "hide": "on_success",
    "label": "Sort Markdown tables",
    "show_command": true,
    "tags": ["format"]
  },
  {
    "args": [".zed/sort-yaml-packages.sh"],
    "command": "sh",
    "hide": "never",
    "label": "Sort YAML packages",
    "show_command": true,
    "tags": ["format"]
  }
]
