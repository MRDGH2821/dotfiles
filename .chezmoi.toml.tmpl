{{- $email := promptStringOnce . "email" "Email address (default ask.mrdgh2821@outlook.com)" -}}
{{- if not $email }}{{ $email = "ask.mrdgh2821@outlook.com" }}{{ end -}}
{{- $editor := promptStringOnce . "editor" "Editor (code/zed, default code)" -}}
