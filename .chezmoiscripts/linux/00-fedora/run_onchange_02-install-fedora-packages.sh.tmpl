#!/usr/bin/env bash

export PATH="${HOME}/.local/bin:${HOME}/.local/share/soar/bin:${PATH}"
bindir="$HOME/.local/bin/"
appimagedir="$HOME/AppImages/"

mkdir -p "$bindir"
mkdir -p "$appimagedir"

# Fedora

{{ $fedora := include ".chezmoidata/packages/linux/fedora.yaml" | fromYaml }}
{{ $common := include ".chezmoidata/packages/linux/linux_common.yaml" | fromYaml }}
{{ $distros := include ".chezmoidata/distros.yaml" | fromYaml }}

# Native packages

{{ if and (hasKey .chezmoi.osRelease "id") (has .chezmoi.osRelease.id $distros.fedora) }}

echo "Installing RPM packages"

{{/* Collect ALL dnf5 packages into one variable */}}
{{ $allDnfPackages := list }}

{{/* Add base dnf5 packages */}}
{{ range $fedora.dnf5 }}
  {{ $allDnfPackages = append $allDnfPackages . }}
{{ end }}

{{/* Add terra dnf5 packages */}}
{{ range $fedora.terra }}
  {{ $allDnfPackages = append $allDnfPackages . }}
{{ end }}

{{/* Conditionally add KDE packages */}}
{{ if eq (env "XDG_SESSION_DESKTOP") "KDE" }}
  {{ range $common.kde }}
    {{ $allDnfPackages = append $allDnfPackages . }}
  {{ end }}
{{ end }}

{{/* Conditionally add tablet packages */}}
{{ if eq .devicetype "tablet" }}
echo "Adding tablet specific packages"
  {{ range $common.tablet_only }}
    {{ $allDnfPackages = append $allDnfPackages . }}
  {{ end }}
  {{ range $fedora.tablet_only }}
    {{ $allDnfPackages = append $allDnfPackages . }}
  {{ end }}
{{ end }}

{{/* Install all dnf5 packages in one command */}}
{{ if $allDnfPackages }}
sudo dnf5 install -y --skip-unavailable {{ join " " $allDnfPackages }}
{{ end }}

{{/* Install dnf5 URL packages separately */}}
{{ range $fedora.dnf5_url }}
sudo dnf5 install -y --skip-unavailable {{ . | quote }}
{{ end }}

{{/* echo "Downloading packages via dra"
{{ range $fedora.dra.appimage }}
echo "Downloading {{.}}"
dra download -o "$appimagedir" -i {{.}}
{{ end }} */}}

{{ range $fedora.dra.bin }}
echo "Downloading {{.}}"
dra download -o "$bindir" -i {{.}}
{{ end }}

{{ range $fedora.dra.package }}
echo "Downloading {{.}}"
dra download -i {{.}}
{{ end }}

echo "Installing Flatpak packages"
flatpak remote-add --if-not-exists flathub https://flathub.org/repo/flathub.flatpakrepo
flatpak remote-add --if-not-exists flathub https://dl.flathub.org/repo/flathub.flatpakrepo
flatpak install -y flathub {{ range $fedora.flatpak }} {{.}}{{ end }}

# Linux self installing packages
echo "Installing self installing packages"
{{ range $fedora.installer_url }}
bash -c {{ . | quote }}
{{ end }}

{{ else }}
echo "This script is only for Fedora based systems. Exiting..."
exit 1
{{ end }}
