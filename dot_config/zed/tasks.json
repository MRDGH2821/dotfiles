[
  {
    "command": "lazygit -p $ZED_WORKTREE_ROOT",
    "hide": "on_success",
    "label": "Start Lazygit"
  },
  {
    "args": ["prettier", ".", "--write"],
    "command": "npx",
    "hide": "never",
    "label": "Format all files with prettier",
    "show_command": true
  },
  {
    "args": ["-i", "-P", "'sort_keys(..)'", "$ZED_FILE"],
    "command": "yq",
    "hide": "never",
    "label": "Sort JSON/YAML properties",
    "show_command": true
  },
  {
    "allow_concurrent_runs": false,
    "command": "find . \\( -name '*.yaml' -o -name '*.yml' -o -name '*.json' \\) -exec yq -i -P 'sort_keys(..)' {} \\;",
    "hide": "never",
    "label": "Sort JSON/YAML properties of all files in workspace",
    "shell": {
      "program": "bash"
    },
    "show_command": true
  },
  {
    "args": ["toml-sort", "-i", "-a", "$ZED_FILE"],
    "command": "uvx",
    "hide": "never",
    "label": "Sort TOML properties",
    "show_command": true
  }
]
