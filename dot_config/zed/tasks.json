[
  {
    "args": ["prettier", ".", "--write"],
    "command": "bunx",
    "hide": "never",
    "label": "Format all files with prettier",
    "show_command": true,
    "tags": ["format"]
  },
  {
    "label": "Open Typst Preview",
    "command": "xdg-open http://127.0.0.1:23635/",
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "never",
    "reveal_target": "dock",
    "hide": "always",
    "shell": "system",
    "show_summary": true,
    "show_command": true
  },
  {
    "args": ["difftool", "--dir-diff"],
    "command": "git",
    "hide": "on_success",
    "label": "Meld dir diff"
  },
  {
    "args": ["difftool", "$ZED_FILE", "-y"],
    "command": "git",
    "hide": "on_success",
    "label": "Meld file diff"
  },
  {
    "args": [
      "-i",
      "'.words |= sort_by(downcase) | .ignorePaths |= sort_by(downcase)'",
      ".cspell.json"
    ],
    "command": "yq",
    "hide": "never",
    "label": "Sort Cspell arrays",
    "show_command": true,
    "tags": ["format"]
  },
  {
    "args": ["-i", "-P", "'sort_keys(..)'", "$ZED_FILE"],
    "command": "yq",
    "hide": "never",
    "label": "Sort JSON/YAML properties",
    "show_command": true,
    "tags": ["format"]
  },
  {
    "allow_concurrent_runs": false,
    "command": "find . \\( -name '*.yaml' -o -name '*.yml' -o -name '*.json' \\) -exec yq -i -P 'sort_keys(..)' {} \\;",
    "hide": "never",
    "label": "Sort JSON/YAML properties of all files in workspace",
    "shell": {
      "program": "bash"
    },
    "show_command": true,
    "tags": ["format"]
  },
  {
    "args": ["toml-sort", "-i", "-a", "$ZED_FILE"],
    "command": "uvx",
    "hide": "never",
    "label": "Sort TOML properties",
    "show_command": true,
    "tags": ["format"]
  },
  {
    "command": "lazygit -p $ZED_WORKTREE_ROOT",
    "hide": "on_success",
    "label": "Start Lazygit"
  }
]
